<body>
  <div class="header-box">岩波新書ルーレット</div>
  <br>
  <button id="start-btn">GO</button>

  <div id="result"></div>
  <div id="search-link">
    <a id="google-link" href="" target="_blank">Googleで検索</a>
  </div>

  <script>
    const shinshoNumbers = [
      1955, 1954, 1953, 1952, 1951, 1950,
      1949, 1948, 1947, 1946, 1945, 1944,
      1943, 1942, 1941, 1940, 1939, 1938
      // 実際はCSVからの全リストをここに展開 or 外部ファイル読込
    ];

    const btn = document.getElementById("start-btn");
    const result = document.getElementById("result");
    const searchLink = document.getElementById("search-link");
    const googleLink = document.getElementById("google-link");

    btn.addEventListener("click", () => {
      result.textContent = "...";
      searchLink.style.display = "none";

      setTimeout(() => {
        const random = shinshoNumbers[Math.floor(Math.random() * shinshoNumbers.length)];
        result.textContent = `新赤${random}`;
        googleLink.href = `https://www.google.com/search?q=新赤${random}`;
        googleLink.textContent = `新赤${random} を検索`;
        searchLink.style.display = "block";
      }, 1000);
    });
  </script>
